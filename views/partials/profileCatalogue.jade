				p Aide

.col-md-10.col-md-offset-1
	h3 Catalogue
	<br>
	div(class="col-md-4 nopadding")
		input(type="text",ng-model="search",class="form-control",placeholder="Search",style="height:33px;max-width : 180px;")
	div(class="col-md-4 col-md-offset-4")
		a(href='profileCatalogueAdd')
			<button type="button" class="btn btn-default"> + Ajouter un nouveau produit</button>
	<br><br><br><br><br>
	p Mes produits ({{ foodFromUser.length }})
	<br>
	div(class="col-md-12 catalogueListItem nopadding",ng-repeat="item in foodFromUser | filter:search ")
		.catalogueListItemText.col-md-1.nopadding
			img(src="upload/{{ item.user }}/{{item.name}}.jpg",style="max-height:100%; max-width:100%;")
		.catalogueListItemTitle.col-md-6 {{ item.name }}
		.catalogueListItemText.col-md-1 20 <i class="fa fa-eur"></i>
		.catalogueListItemText.col-md-2(style="background-color : {{ item.type | colorItem }};color : white;opacity : 0.7") {{ item.type }}
		.catalogueListItemButton.col-md-1 <i class="fa fa-pencil"></i>
		.catalogueListItemButton.col-md-1 <i class="fa fa-times"></i>