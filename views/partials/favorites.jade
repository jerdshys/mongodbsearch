.col-md-10.gallerie.nopadding(style="float:left;")
	div(class="col-md-3 gallerieItem nopadding",ng-repeat="item in userInfo.favorites | filter:search | filter : type",ng-animate='animate',style="background-color : #2E2E2E; opacity : 0.73;")
		.hover
			a(href="item/{{ item._id }}") 
				<i class="fa fa-shopping-cart"></i> Acheter <br><br>
			a(href="user/{{ item.username }}")
				<i class="fa fa-user"></i> Profil
		.gallerieThumbnail
			.helper
			img(src="upload/{{ item.username }}/{{item.food}}.jpg")
		.gallerieText
				.gallerieTextNom {{item.food}}
				.gallerieTextPrix {{item.username}}

