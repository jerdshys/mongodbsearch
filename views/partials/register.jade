.paddingTop

.col-md-3.col-md-offset-4.box
  h3.bandeau <i class="fa fa-sign-in"></i> Register
  .textBox  
    form(role='form', action="/register",method="post", style='max-width: 300px;')
      .form-group
        label Login
        input.inputLogin.form-control(type='text', name="username", placeholder='Enter Username')
      .form-group
        label Password
        input.inputLogin.form-control(type='password', name="password", placeholder='Password')    
      .form-group
        label Password ( confirm )
        input.inputLogin.form-control(type='password', name="passwordConfirm", placeholder='Confirmation')
      <br/><br/>
      button.btn.btn-default.pull-right(type='submit') Submit